{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/adapter/*": ["src/adapter/*"],
      "@/application/*": ["src/application/*"],
      "@/common/*": ["src/common/*"],
      "@/domain/*": ["src/domain/*"],
      "@/infrastructure/*": ["src/infrastructure/*"],
      "@/main/*": ["src/main/*"],
    }
  },
  "include": [
    "src/**/*"
  ]
}
